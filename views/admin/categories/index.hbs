
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h1>Create Category</h1>
            <form action="/admin/categories/create" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="" class="form-control" placeholder="Enter title">
                </div>
                <button type="submit" class="btn btn-primary">Create Category</button>
            </form>
        </div>
    </div>
    <br>
    <hr>
    <div class="row">
         <div class="col-sm">
            <h1>Categories</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Name</th>
                    
                    </tr>
                </thead>
                <tbody>
                    {{#each category}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{name}}</td>
                        <td><a href="/admin/categories/edit/{{_id}}" class="btn btn-primary">Edit</a></td>
                        <td>
                            <form action="/admin/categories/{{_id}}?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                            
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
             
            </table>
    
        </div>
    </div>
       
</div>