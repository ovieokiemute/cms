    {{>home/home-nav}}


    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.owner.firstName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{formatDate post.date 'MMMM Do YYYY'}}</p>

          <hr>

          <!-- Preview Image -->
          {{#if post.image}}<img class="img-fluid rounded" src="/uploads/{{post.image}}" alt="">{{/if}}

          <hr>

          <!-- Post Content -->
          <p>{{post.body}}</p>

